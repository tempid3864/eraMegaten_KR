			RETURN 80
		LOCAL = 50
		IF NO:(ARG:1) == [[캐릭터:카즈키]]
			;LOCAL += 163 * (MIN(MAX(51,MAXBASE:(ARG:1):LV),70) - 50) / 20
			LOCAL += MIN(MAX(50,MAXBASE:(ARG:1):LV),70) - 50 * 3/2
		ELSEIF ABL:(ARG:1):속성LC == 3 && MAXBASE:(ARG:1):LV > 69
			SIF TALENT:(ARG:1):아픔에강함
				LOCAL += 30
		ENDIF
		RETURN LOCAL
ENDSELECT
