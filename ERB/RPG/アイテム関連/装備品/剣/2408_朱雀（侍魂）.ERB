		SIF ARG:1 == -1
			RETURN 141
		LOCAL = 101
		IF NO:(ARG:1) == [[캐릭터:카즈키]]
			LOCAL += MIN(MAX(50,MAXBASE:(ARG:1):LV),70) - 50 * 2
		ELSEIF ABL:(ARG:1):속성LC == 3 && MAXBASE:(ARG:1):LV > 69
			SIF TALENT:(ARG:1):솔직함
				LOCAL += 40
		ENDIF
		RETURN LOCAL
	CASE 4
