@장비추가스킬_2631,ARG,ARG:1 = -1
#LOCALSIZE 2
#LOCALSSIZE 2
IF ARG:1 != -1
	;1-1번 세트. 그렘린 세트
	IF EQUIP:(ARG:1):몸통 == 3805 && EQUIP:(ARG:1):팔 == 4072 && EQUIP:(ARG:1):발 == 4700
	IF BASE:(ARG:1):LV < 10 && EQUIP:(ARG:1):악세서리 == 5096 ; 레벨 10 미만 + 케블러 방어구 세트 + 그렘린 MK1
		SELECTCASE ARG
			CASE 0
				;지원 프로토콜
				RETURN 3777
			CASE 1
				;메딕킷치료
				RETURN 440
			CASE 2
				;안정화
				RETURN 441
			CASE 3
				;잠복(XCOM)
				RETURN 3780
			ENDSELECT
		ENDIF
	IF (EQUIP:(ARG:1):몸통 == 3805 && EQUIP:(ARG:1):팔 == 4072 && EQUIP:(ARG:1):발 == 4700)
		IF BASE:(ARG:1):LV > 9 && EQUIP:(ARG:1):악세서리 == 5096 ;레벨 9 이상 + 케블러 방어구 세트 + 그렘린 MK1
			SELECTCASE ARG
				CASE 0
					;지원 프로토콜
					RETURN 3777
				CASE 1
					;그렘린치료
					RETURN 442
				CASE 2
					;안정화
					RETURN 441
				CASE 3
					;전투프로토콜
					RETURN 961
				CASE 4
					;잠복(XCOM)
					RETURN 3780
				ENDSELECT
			ENDIF
		ENDIF
	ENDIF
ENDIF
RETURN 0

