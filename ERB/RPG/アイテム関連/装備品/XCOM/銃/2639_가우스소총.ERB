@전투능력수정_2639,ARG,ARG:1 = 0
#LOCALSIZE 2
#LOCALSSIZE 2
;버그픽스용
SIF (ARG:1) == -1
	ARG:1 = 0
SELECTCASE GET_BATTLESTATUS(ARG)
	CASE "공격"
		SIF ARG == -1
			RETURN 120
		IF BASE:(ARG:1):LV >= 21
			RETURN 120
		ELSEIF BASE:(ARG:1):LV >= 11
			RETURN 100
		ELSEIF BASE:(ARG:1):LV >= 10
			RETURN 80
		ELSE
			RETURN 80
		ENDIF
	CASE "명중"
		SIF ARG == -1
			RETURN 120
		IF BASE:(ARG:1):LV >= 21
			RETURN 120
		ELSEIF BASE:(ARG:1):LV <= 20
			RETURN 100
		ELSE
			RETURN 100
		ENDIF
	CASE "방어"
		SIF ARG == -1
			RETURN -40
		IF BASE:(ARG:1):LV >= 21
			RETURN -40
		ELSEIF BASE:(ARG:1):LV <= 20
			RETURN -30
		ELSE
			RETURN -20
		ENDIF
	CASE "회피"
		SIF ARG == -1
			RETURN -30
		IF BASE:(ARG:1):LV >= 21
			RETURN -30
		ELSEIF BASE:(ARG:1):LV <= 20
			RETURN -20
		ELSE
			RETURN -10
		ENDIF
ENDSELECT
RETURN 0

