@전투능력수정_2648,ARG,ARG:1 = -1
#LOCALSIZE 2
#LOCALSSIZE 2
SELECTCASE GET_BATTLESTATUS(ARG)
	CASE "공격"
		SIF ARG == -1
			RETURN 160
		IF BASE:ARG:LV >= 40
			RETURN 160
		ELSEIF BASE:ARG:LV >= 35
			RETURN 140
		ELSEIF BASE:ARG:LV >= 30
			RETURN 120
		ELSEIF BASE:ARG:LV >= 20
			RETURN 115
		ELSEIF BASE:ARG:LV >= 10
			RETURN 110
		ELSE
			RETURN 110
		ENDIF
	CASE "명중"
		SIF ARG == -1
			RETURN 195
		IF BASE:ARG:LV >= 40
			RETURN 195
		ELSEIF BASE:ARG:LV >= 35
			RETURN 185
		ELSEIF BASE:ARG:LV >= 30
			RETURN 145
		ELSEIF BASE:ARG:LV >= 20
			RETURN 125
		ELSEIF BASE:ARG:LV >= 10
			RETURN 115
		ELSE
			RETURN 115
		ENDIF
ENDSELECT
RETURN 0

