		SELECTCASE ARG
			ENDSELECT
	IF BASE:(ARG:1):LV > 29
		SELECTCASE ARG
			CASE 0
				;스팅
				RETURN 177
			CASE 1
				;데드아이
				RETURN 171
			CASE 2
				;리퍼영혼수확
				RETURN 3801
			ENDSELECT
		ENDIF
	ENDIF
ENDIF
RETURN 0

