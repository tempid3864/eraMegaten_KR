		CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:전용기3]]
	ELSE
		CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:전용기2]]
	ENDIF
ELSE
	;ＧＯ時にライブノベル起動
	CALL LIVENOVEL_TR
	SIF CSTR:ARG:180 != ""
		CFLAG:ARG:집중플래그 = 1
	生存カウント = 0
	絶縁カウント = 0
	FOR LOCAL,1, 7
		LOCALS = 포지션{LOCAL}
		SIF FLAG:LOCALS == -1
			CONTINUE
		SIF CFLAG:(FLAG:LOCALS):상태이상 == GET_STATE_NUM("DYING")
			CONTINUE
		生存カウント += 1
		SIF CFLAG:(FLAG:LOCALS):전격가드킬 > 0
			CONTINUE
		;電撃無効ㆍ反射ㆍ吸収の数を確認
		SIF MAXBASE:(FLAG:LOCALS):전격 <= 0 || MAXBASE:(FLAG:LOCALS):전격 == 999
			絶縁カウント += 1
	NEXT
	IF 生存カウント == 絶縁カウント
		;プレイヤー側全員が電撃無効以上なら
		CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:전격가드브레이크]]
	ELSE
		LOCAL = RAND:10
		SELECTCASE LOCAL
		CASE 0
			;10%の確率でヴォルティックチェーン
			CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:전용기3]]
		CASE 1 TO 3
			;30%の確率でライトニングスフィア
			CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:전용기1]]
		CASE 4 TO 6
			;30%の確率でジオダイン
			CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:지오다인]]
		CASEELSE
			;30%の確率でスパークカリバー
			CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:전용기2]]
		ENDSELECT
	ENDIF
ENDIF

