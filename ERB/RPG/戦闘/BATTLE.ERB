;===================================================================
;전투開始処理
;===================================================================
@BATTLE_START
IF MATCH(FLAG, -1, GETNUM(FLAG, "포지션7"), GETNUM(FLAG, "포지션16")+1) == 10
	PRINTW 적이 배치되지 않은 상태로 전투가 개시되었습니다
	PRINTW 에러를 회피하기 위해 전투 처리를 중단하고 종료합니다
	PRINTW 이 에러가 발생한 이벤트 혹은 던전과 계층의 보고를 부탁합니다
	RETURN 0
ENDIF
CALL REFRESH_FORMATION
CALL REFRESH_BATTLE

;윈도우형 메시지의 스킵 플래그 해제
FLAG:윈도우메시지스킵 = 0

CALLFORM EVENT_BATTLE_START
SIF FLAG:선제기습취소 == 0
	CALL CHECK_SURPRISEATTACK
CALL BATTLE_MAIN


;===================================================================
;선제/기습/배후공격판정
;===================================================================
@CHECK_SURPRISEATTACK
#LOCALSIZE 4
LOCAL:1 = 0
;플레이어측의 판정값
LOCAL:3 = 0
;인수
LOCAL:2 = 0
;적측의 판정값
FOR LOCAL,1,7
	LOCALS = 포지션{LOCAL}
	SIF FLAG:LOCALS < 0
		CONTINUE
	LOCAL:1 += (BASE:(FLAG:LOCALS):(GET_BASESTATUS(5)) + BASE:(FLAG:LOCALS):(GET_BASESTATUS(6)))
	LOCAL:3 += 1
NEXT
LOCAL:1 /= LOCAL:3
LOCAL:3 = 0
FOR LOCAL,7,17
	LOCALS = 포지션{LOCAL}
	SIF FLAG:LOCALS < 0
		CONTINUE
	LOCAL:2 += (BASE:(FLAG:LOCALS):(GET_BASESTATUS(5)))
	LOCAL:3 += 1
NEXT
LOCAL:2 /= LOCAL:3

IF RAND:100 + LOCAL:1 + (EQUIP:MASTER:("Mr.서프라이즈") && NUM_SUMMONER()) * 20 > RAND:100 + LOCAL:2
	SIF RAND:100 < MAX(5,10 + LOCAL:1 - LOCAL:2) + (EQUIP:MASTER:("Mr.서프라이즈") && NUM_SUMMONER()) * 20
		FLAG:선제공격플래그 = 1
ELSE
	SELECTCASE RAND:100
		CASE IS < MAX(5,8 + LOCAL:2 -LOCAL:1) + (FLAG:월령 == 0 || FLAG:월령 == 8 ? 15 # 0) + (DA:(FLAG:현X):(FLAG:현Y) % 10 == -1) * 10
			FLAG:백어택플래그 = 1
			FLAG:기습플래그 = 1
			IF EQUIP:MASTER:하쿠타로우 == 0 || NUM_SUMMONER() == 0
				FOR LOCAL,1,7
					LOCALS = 포지션{LOCAL}보존
					LOCALS:1 = 포지션{LOCAL}
					FLAG:LOCALS = FLAG:(LOCALS:1)
				NEXT
				CALL CHANGE_POS,1,6
				CALL CHANGE_POS,2,5
				CALL CHANGE_POS,3,4
			ENDIF
		CASE IS < MAX(5,25 + LOCAL:2 -LOCAL:1) + (FLAG:월령 == 0 || FLAG:월령 == 8 ? 30 # 0) + (DA:(FLAG:현X):(FLAG:현Y) % 10 == -1) * 20
			FLAG:기습플래그 = 1
	ENDSELECT
ENDIF
SIF ASSI > 0 && (FLAG:선제공격플래그 + FLAG:기습플래그 < 1)
	CALL SUPORT(1, 0)

;===================================
;전투시메인메뉴표시
;===================================
@BATTLE_MAIN
#LOCALSIZE 8

;승패 체크
CALL FIGHT_IT_OUT

;패배플래그가 있으면 게임오버 호출
SIF FLAG:패배플래그 == 1
	CALL BATTLE_LOSE

IF FLAG:승리플래그
	CALL BATTLE_END
	RETURN 1
ENDIF
IF FLAG:선제공격플래그
	SETCOLOR 0x33ffcc
	PRINTL 　┏━━━━━━━━━━━━━┓
	PRINTL 　┃ PARTY SURPRISE ATTACK !! ┃
	PRINTW 　┗━━━━━━━━━━━━━┛
	RESETCOLOR
	SIF ASSI > 0
		CALL SUPORT(1, 1)
ELSEIF FLAG:백어택플래그 && FLAG:기습플래그
	SETCOLOR 0xff0033
	PRINTL 　┏━━━━━━━━━━━━━┓
	PRINTL 　┃  ENEMY  BACK  ATTACK !!! ┃
	PRINTW 　┗━━━━━━━━━━━━━┛
	RESETCOLOR
	IF EQUIP:MASTER:하쿠타로우 && NUM_SUMMONER() && FLAG:기습플래그 < 2
		CLEARLINE 3
		SETCOLOR 0x33ffcc
		PRINTL 　┏━━━━━━━━━━━━━┓
		PRINTL 　┃"HYAKU-TARO" SAVED YOU !! ┃
		PRINTW 　┗━━━━━━━━━━━━━┛
		RESETCOLOR
		FLAG:백어택플래그 = 0
		SIF ASSI > 0
			CALL SUPORT(1, 3)
		GOTO BREAK_ENEMYATTACK
	ENDIF
	SIF ASSI > 0
		CALL SUPORT(1, 2)
	;---- EDIT 034 MOD START -------------------------
	LOCAL:7 = 0
	FOR LOCAL,1,7
		LOCALS = 포지션{LOCAL}
		SIF FLAG:LOCALS < 0
			CONTINUE
		SIF GET_STATE(CFLAG:(FLAG:LOCALS):상태이상) == "DYING" || GET_STATE(CFLAG:(FLAG:LOCALS):상태이상) == "STONE"
			CONTINUE
		LOCAL:(LOCAL:7 + 1) = FLAG:LOCALS
		LOCAL:7 ++
	NEXT
	IF LOCAL:7 > 0
		SETCOLOR 0x33ffcc
		LOCAL = LOCAL:(RAND:(LOCAL:7) + 1)
		TFLAG:전투이벤트 = 95
		SWAP LOCAL,TARGET
		CALL BATTLE_EVENT,TARGET
		SWAP LOCAL,TARGET
		RESETCOLOR
	ENDIF
	;---- EDIT 034 MOD END ---------------------------
	FOR LOCAL,0,6
		LOCALS = 포지션{LOCAL+1}
		IF FLAG:LOCALS > -1
			CFLAG:(FLAG:LOCALS):방어플래그 = 0
			CFLAG:(FLAG:LOCALS):입력행동 = -1
		ENDIF
	NEXT
	FOR LOCAL,0,10
		LOCALS = 포지션{LOCAL+7}
		IF FLAG:LOCALS > -1
			CALL ACTIONABLE_CHARA,FLAG:LOCALS
			IF RESULT == 1
				CALL SET_ACTION_ENEMY,FLAG:LOCALS
			ELSE
				CFLAG:(FLAG:LOCALS):입력행동 = -1
			ENDIF
		ENDIF
	NEXT
	
	CALL BATTLE_DECIDE_INITIATIVE
	;디버그용
	;CALL SHOW_INITIATIVE
	CALL BATTLE_TURNSTART
	IF FLAG:승리플래그
		CALL BATTLE_END
		RETURN 1
	ENDIF
	CALL BATTLE_TURNEND
ELSEIF FLAG:기습플래그
	SETCOLOR 0x990066
	PRINTL 　┏━━━━━━━━━━━━━┓
	PRINTL 　┃ ENEMY SURPRISE ATTACK !! ┃
	PRINTW 　┗━━━━━━━━━━━━━┛
	RESETCOLOR
	IF EQUIP:MASTER:하쿠타로우 && NUM_SUMMONER() && FLAG:기습플래그 < 2
		CLEARLINE 3
		SETCOLOR 0x33ffcc
		PRINTL 　┏━━━━━━━━━━━━━┓
		PRINTL 　┃"HYAKU-TARO" SAVED YOU !! ┃
		PRINTW 　┗━━━━━━━━━━━━━┛
		RESETCOLOR
		SIF ASSI > 0
			CALL SUPORT(1, 5)
		GOTO BREAK_ENEMYATTACK
	ENDIF
	SIF ASSI > 0
		CALL SUPORT(1, 4)
	;---- EDIT 034 MOD START -------------------------
	LOCAL:7 = 0
	FOR LOCAL,1,7
		LOCALS = 포지션{LOCAL}
		SIF FLAG:LOCALS < 0
			CONTINUE
