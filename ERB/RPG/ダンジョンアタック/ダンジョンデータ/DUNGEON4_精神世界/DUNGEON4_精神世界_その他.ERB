		ELSE
			RETURN 0
		ENDIF
		IF TFLAG:410 >= CHARANUM
			CFLAG:LOCAL:입력행동 = 0
			RETURN 0
		ENDIF
		CALL ACTIONABLE_CHARA, TFLAG:410
		IF RESULT == 0
			CFLAG:LOCAL:입력행동 = 0
			RETURN 0
		ENDIF
		IF NO:(TFLAG:410) != LOCAL:1
			CFLAG:LOCAL:입력행동 = 0
