			RETURN 0
		ENDIF
		IF NO:(TFLAG:411) != LOCAL:1
			CFLAG:LOCAL:입력행동 = 0
			RETURN 0
		ENDIF
		CALL ACTIONABLE_CHARA, TFLAG:411
		IF RESULT == 0
			CFLAG:LOCAL:입력행동 = 0
			RETURN 0
		ENDIF
		CALL CHECK_ACTIONABLE, TFLAG:411, LOCAL:2
		IF RESULT == 0
			CFLAG:LOCAL:입력행동 = 0
			RETURN 0
		ENDIF
