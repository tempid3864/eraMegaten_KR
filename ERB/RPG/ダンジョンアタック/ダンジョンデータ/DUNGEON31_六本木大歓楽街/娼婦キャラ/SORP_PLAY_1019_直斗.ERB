;나오토
;ナオヤルートで絶縁状貰った後、入手可能に
@SORP_PLAY_1019, ARGS
#DIM CHARA, 1
#LOCALSSIZE 1
SELECTCASE ARGS
	CASE "娼婦番号"
		RESULTS = [1019]
	CASE "キャラ名"
		RESULTS = 탐정 왕자
	CASE "指名名"
		IF 롯폰기창관플래그:19 == 0
			RESULTS = 특별 게스트
		ELSE
			RESULTS = 탐정 왕자
		ENDIF
	CASE "所属"
		;表なら1、裏なら2
		RETURN 2
	CASE "判定"
		;指名可能なら0、不可なら1
		;絶縁状イベント発生後かつ나오토未加入
		;(絶縁状はナオヤルート進行時のみ発生する認識のため、百合の花とは排他になる認識)
		IF 롯폰기창관플래그:19 >= 3
			RETURN 1
		ELSEIF 이벤트플래그:6:0 == 2 && FINDCHARA_B([[캐릭터:나오토]]) < 1
			RETURN 0
		ELSE
			RETURN 1
		ENDIF
	CASE "価格"
		RETURN 200
	CASE "紹介文"
		IF 롯폰기창관플래그:19 == 0
			CALL MESSAGE_WINDOW_D, "남성 접수원", "어이쿠, 눈치채셨습니까/여긴 가끔 특별 이벤트를 개최하고 있어서 말이죠"
			CALL MESSAGE_WINDOW_D, "남성 접수원", "메시아교를 들쑤시던 쥐새끼가 조금 전에 잡혀서/정체를 파헤쳐보니, 이게 항간에 소문난 탐정 왕자! 라더라구요"
			CALL MESSAGE_WINDOW_D, "남성 접수원", "사실이라면 진작에 처분됐을텐데/이 가십을 써먹지 않을 놈은 없다고 노예로 팔려서/중개로 이쪽으로 온 거거든요"
			CALL MESSAGE_WINDOW_D, "남성 접수원", "판매자의 희망으로서는/「어디 사는 부자에게 팔려서, 평생 인간 취급 받지 못하는 애완견 생활하게 보내면 좋다」/라고 하셨는데…어떠십니까 손님? 사보시렵니까?"
			CALL MESSAGE_WINDOW_D, "남성 접수원", "이런, 말을 좀 덜 했는데, 여기서 안을 수는 없습니다/돈을 주시면 흔쾌히 양도하겠습니다만/그때까지는 손님 맞이로 취급하는 계약입니다"
		ELSE
			CALL MESSAGE_WINDOW_D, "남성 접수원", "또 얼굴을 보러 오셨습니까?/슬슬 안 사면 다른 고객의 눈에 띌지도 모릅니다?"
		ENDIF
	CASE "確認"
		CALL MESSAGE_WINDOW_D, "남성 접수원", "그래서 얼굴 보는데/200 마카입니다"
	CASE "プレイ口上"
		CALL DUNGEON_WORP,2,5,10;裏娼館用
		;条件によって分岐の追加も可
		IF 롯폰기창관플래그:19 == 0
			CALL MESSAGE_WINDOW_D, "소년?", "윽! 당신은…"
			CALL MESSAGE_WINDOW_D, "", "＞언제 신주쿠에서 만난 모자 쓴 소년 탐정이다/아무래도 그?가 소문의 탐정 왕자·시로가네 나오토였던 것 같다…"
			CALL MESSAGE_WINDOW_D, "나오토", "부끄러움을 참고 부탁드립니다…/…부디, 도와주시면 안되겠습니까?"
			CALL MESSAGE_WINDOW_D, "나오토", "이대로는, 견딜 수 없습니다……/일생…아무것도 이루지 못 한 채라니 절대로 싫어"
			CALL MESSAGE_WINDOW_D, "나오토", "할 수 있는 일은 뭐든 하겠습니다…/그러니, 부디…저를 도와줘요!"
			;あなた「응? 방금 뭐든 한다고 했어…?」
			CALL MESSAGE_WINDOW_D, "", "………………/…………/……"
			CALL SHOW_PICTURE, "EMPTY"
			;見受け可能フラグを設定
			롯폰기창관플래그:19 = 2
		ELSE
			CALL MESSAGE_WINDOW_D, "나오토", "부디, 도와주십시오…/당신밖에 의지할 수 없습니다"
			CALL MESSAGE_WINDOW_D, "", "………………/…………/……"
			CALL SHOW_PICTURE, "EMPTY"
		ENDIF
		;プレイ経験(任意の経験を追加可)
		;CALL INCREASE_LC,5
	CASE "身受け価格"
		RETURN 10000
	CASE "身受け確認"
		CALL MESSAGE_WINDOW_D, "남성 접수원", "어이쿠, 살 마음이 생겼군요?"
		CALL MESSAGE_WINDOW_D, "남성 접수원", "그렇다면, 10000 마카를 받도록 하겠습니다/괜찮으시겠습니까?"
	CASE "身受け口上"
		;ここで加入処理を作成
		CALL ADD_NEW_COMPANION, 4541, 3000
		CHARA = RESULT:1
		;은혜가 있으니 의존도 UP
		CFLAG:CHARA:의존도 = 3000
		;素質
		TALENT:CHARA:저항 = 0;응?
		TALENT:CHARA:쾌감을부정 = 0;방금
		TALENT:CHARA:약점 = 1;뭐든 한다고
		TALENT:CHARA:헌신적 = 1;했지?
		;能力
		;은혜가 있(생략)
		ABL:CHARA:순종 = 3
		ABL:CHARA:봉사정신 = 2
		;経験
		;口上
		CALL MESSAGE_WINDOW_D, "나오토", "감사합니다…/이 은혜는 일생을 걸고 반드시 갚겠습니다"
		롯폰기창관플래그:19 = 3
	CASE "宣伝"
		;
ENDSELECT

