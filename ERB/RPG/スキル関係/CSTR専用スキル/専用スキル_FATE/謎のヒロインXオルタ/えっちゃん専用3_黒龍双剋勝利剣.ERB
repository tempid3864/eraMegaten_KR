	CASE 1
		TIMES L_DMG , 0.02
	CASE 2
		TIMES L_DMG , 0.04
	CASE 3
		TIMES L_DMG , 0.06
	CASE 4
		TIMES L_DMG , 0.08
	CASE 5
		TIMES L_DMG , 0.11
	CASE 6
		TIMES L_DMG , 0.13
	CASE 7
		TIMES L_DMG , 0.15
	CASE 8
		TIMES L_DMG , 0.17
	CASE 9
		TIMES L_DMG , 0.24
ENDSELECT

RETURN L_DMG

