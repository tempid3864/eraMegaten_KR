		SETCOLOR 0xff0033
		CALL 구상호출 , "BATTLE_MESSAGE" , ARG , ARG
		RESETCOLOR
	ENDIF
	CALL SKILLGAGE_H_ADD,ARG,SKILL_NUM,1
	;トドメまでお前を殴るのを止めないフラグが立ってたら不死身フラグを解除してトドメを刺す
	IF HIT_COUNT == 9
		SIF CFLAG:ARG:PT플래그 == 0
