			CASEELSE
				L_DMG = 500
		ENDSELECT
	CASE IS > 1
		SELECTCASE TOINT(CSTR:ARG:102)
			CASE IS > 2
				L_DMG = 550
			CASEELSE
				L_DMG = 450
		ENDSELECT
	CASEELSE
		SELECTCASE TOINT(CSTR:ARG:102)
			CASE IS > 2
				L_DMG = 400
			CASEELSE
				L_DMG = 300
		ENDSELECT
ENDSELECT

