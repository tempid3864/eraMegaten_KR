				PRINTFORM ┃[{LOCAL,2}] %CALLNAME:POS(LOCAL),21,LEFT%┃　┃
				PRINTFORML %"피냄새로 분간한다",40,LEFT%┃
				PRINTFORMW ┗━━━━━━━━━━━━━┛　┗━━━━━━━━━━━━━━━━━━━━┛
