				CALL ACTION_402,POS(LOCAL),LOCAL
			ELSE
				;타루ㆍ카쟈
				SETCOLOR 0xff0033
				PRINTFORML ┏>CHARA━━━━━━━━━━┓　┏>ACT━━━━━━━━━━━━━━━━━━┓
