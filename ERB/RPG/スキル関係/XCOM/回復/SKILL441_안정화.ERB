@ACTION_441,ARG,ARG:1
;코스트를 지불한다
;CALL PAY_COST,ARG,441

CALL SKILL_CURE_STATE_441,CFLAG:(ARG:1):상태이상
IF RESULT == 1
	PRINTFORMW %조사처리(CALLNAME:(ARG:1),"는")% 되살아났다
	CFLAG:(ARG:1):상태이상 = 0
	CFLAG:(ARG:1):상태이상경과턴수 = 0
	CALL VAR_HP,(ARG:1),MAXBASE:(ARG:1):ＨＰ/3
ENDIF

