;스킬 및 행동의 실행
;====================================================
@ACTION_84,ARG,ARG:1
#LOCALSIZE 2
#LOCALSSIZE 2
LOCAL = POS(ARG:1)
A = 0
B = 0
C = 0
IF (MAXBASE:LOCAL:검격 < 100 || MAXBASE:LOCAL:검격 == 999) && CFLAG:LOCAL:검격가드킬 < 1 
		CFLAG:LOCAL:검격가드킬 = 1
		A = 1
	ENDIF

IF CFLAG:LOCAL:물리반사플래그 == 1
		B = CFLAG:LOCAL:물리반사플래그
		CFLAG:LOCAL:물리반사플래그 = 0
	ENDIF

IF CFLAG:LOCAL:검격무효화횟수 > 0
		C = CFLAG:LOCAL:전술무효화횟수
		CFLAG:LOCAL:검격무효화횟수 = 0
	ENDIF

IF A + B + C > 0
    ;PRINTFORML 	TARGET:[{ARG:1,2}] %CALLNAME:LOCAL,20,LEFT%　>>>>>>　내성을 관통했다！
ENDIF

CFLAG:ARG:공격강화 = MIN(32, CFLAG:ARG:공격강화 + 20)
CFLAG:ARG:마법효과강화 = MIN(32, CFLAG:ARG:마법효과강화 + 20)
CALL ATTACK_SINGLE,ARG,LOCAL,84
CFLAG:ARG:마법효과강화 = MAX(-32, CFLAG:ARG:마법효과강화 - 20)
CFLAG:ARG:공격강화 = MAX(-32, CFLAG:ARG:공격강화 - 20)
SIF A == 1
     CFLAG:LOCAL:검격가드킬 = 0
SIF B > 0
     CFLAG:LOCAL:물리반사플래그 = B
SIF C > 0
     CFLAG:LOCAL:검격무효화횟수 = C

