;스킬 및 행동의 실행
;====================================================
@ACTION_79,ARG,ARG:1
#LOCALSIZE 2
#LOCALSSIZE 2
LOCAL = POS(ARG:1)
A = 0
B = 0
C = 0
IF (MAXBASE:LOCAL:검격 < 100 || MAXBASE:LOCAL:검격 == 999) && CFLAG:LOCAL:검격가드킬 < 1 
		CFLAG:LOCAL:검격가드킬 = 1
		A = 1
	ENDIF

IF CFLAG:LOCAL:물리반사플래그 == 1
		B = CFLAG:LOCAL:물리반사플래그
		CFLAG:LOCAL:물리반사플래그 = 0
	ENDIF

IF CFLAG:LOCAL:검격무효화횟수 > 0
		C = CFLAG:LOCAL:검격무효화횟수
		CFLAG:LOCAL:검격무효화횟수 = 0
	ENDIF

IF A + B + C > 0
    ;PRINTFORML 	TARGET:[{ARG:1,2}] %CALLNAME:LOCAL,20,LEFT%　>>>>>>　내성을 관통했다！
ENDIF

CFLAG:ARG:명중강화 = MIN(64, CFLAG:ARG:명중강화 + 32)
CFLAG:ARG:마법효과강화 = MIN(32, CFLAG:ARG:마법효과강화 + 32)
CFLAG:ARG:마법위력강화 = MIN(32, CFLAG:ARG:마법위력강화 + 32)
CALL ATTACK_SINGLE,ARG,LOCAL,79
CFLAG:ARG:마법효과강화 = MAX(-32, CFLAG:ARG:마법효과강화 - 32)
CFLAG:ARG:마법위력강화 = MAX(-32, CFLAG:ARG:마법위력강화 - 32)
CFLAG:ARG:명중강화 = MAX(-64, CFLAG:ARG:명중강화 - 32)
SIF A == 1
     CFLAG:LOCAL:검격가드킬 = 0
SIF B > 0
     CFLAG:LOCAL:물리반사플래그 = B
SIF C > 0
     CFLAG:LOCAL:검격무효화횟수 = C
